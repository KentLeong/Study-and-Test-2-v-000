<center>
  <h1><%=@concept.name%></h1>
  <%=link_to "Back", subcategory_path(@concept.subcategory)%><br>
  <%=button_tag "Take Quiz"%><br>
  <%if admin_or_mod?%>
    <%=link_to "Edit", edit_concept_path(@concept)%>
    <%=link_to "Add", new_concept_question_path(@concept)%>
    <%end%>
  <p>Questions: <%=@concept.questions.count%></p>
  <p>Difficulty: <%=@concept.get_difficulty%>/10</p>
  <p>Description:<br>
    <%=@concept.description%>
  </p>
  <%if admin_or_mod?%>
    <%@concept.questions.each do |q|%>
      <p>
        <%=q.inquest%><br>
        <%=link_to "Edit", edit_question_path(q)%> | <%=link_to "Destroy", question_path(q), data: {confirm: 'Are you sure?'}, method: :delete %>
      </p>
    <%end%>
  <%end%>
</center>
